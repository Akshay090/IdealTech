<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d6f9f5">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/employment_d_bar"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="#c6ecbc">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="Employment Details"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                card_view:layout_editor_absoluteY="5dp"
                card_view:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/edit_pen"
                android:tint="#00ff00"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:layout_editor_absoluteY="5dp"
                card_view:ignore="MissingConstraints" />



        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/employ_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/employment_d_bar"
            android:background="#00ffe1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/employ_view"
            android:id="@+id/company_name"
            android:text="XYZ Institute of Tech"
            android:textSize="17sp"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="2017 - Present"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/company_name"
            app:layout_constraintTop_toBottomOf="@+id/employ_view" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/company_name"
            android:id="@+id/post_name"
            android:text="post ant company"
            android:textSize="17sp"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/post_name"
            android:id="@+id/salary_exp"
            android:text="100K salary"
            android:textSize="17sp"
            android:layout_margin="4dp"/>



    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>


