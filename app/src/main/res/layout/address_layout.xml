<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="5dp"
        >


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/address_line1"
            >

            <EditText
                android:id="@+id/address_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Flat /House no /Floor /Building"
                android:shadowColor="@color/colorPrimary"
                android:inputType="text"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/address_line1"
            android:id="@+id/address_line2"
            >

            <EditText
                android:id="@+id/address_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Colony /Street /Locality"
                android:shadowColor="@color/colorPrimary"
                android:inputType="text"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/address_line2"
            android:id="@+id/address_line3"
            >

            <EditText
                android:id="@+id/address_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Landmark"
                android:shadowColor="@color/colorPrimary"
                android:inputType="text"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/address_line3"
            android:id="@+id/address_line4"
            >

            <EditText
                android:id="@+id/address_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:shadowColor="@color/colorPrimary"
                android:inputType="text"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/address_line4"
            android:id="@+id/address_line5"
            >

            <EditText
                android:id="@+id/address_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:shadowColor="@color/colorPrimary"
                android:inputType="text"
                />


        </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

