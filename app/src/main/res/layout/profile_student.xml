<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:id="@+id/profile_student">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Previous Education Detail"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:hint="Education Detail"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="7"
            android:scrollbars="vertical"
            android:singleLine="false" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="College Detail"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:hint="College Name"
             />

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:hint="Course Name"
            />

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:hint="Semester"
            />

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:hint="Branch"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Your Future Jobs"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:hint="Jobs you would like to apply in Future"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="4"
            android:scrollbars="vertical"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Registration Type"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Hr Internship/Training"
            />

        <RadioButton
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Android/Java Internship/Training"
            />

        <RadioButton
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="PHP Internship/Training"
            />

        <RadioButton
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Asp.Net Internship/Training"
            />

    </LinearLayout>


    </LinearLayout>

