<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="8dp"
    android:id="@+id/job_view_h_card"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/Jobs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title def"
            android:textSize="27sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Job_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vadodara def"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPERIENCE : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Job_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 to 2 Years def"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POSTED ON : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Job_postedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/05/2018 def"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Job_applyNowBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="-6dp"
                    android:text="APPLY NOW"
                    android:textSize="15sp"
                    android:theme="@style/PrimaryFlatButton"
                    android:gravity="center_vertical"
                    />

                <Button
                    android:id="@+id/Job_shareBtn"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="-9dp"
                    android:layout_marginStart="124dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/share" />


                <Button
                    android:id="@+id/Job_saveBtn"
                    android:layout_width="26dp"
                    android:layout_height="29dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"

                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/ic_bookmark_border_black_24dp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>